
#!/bin/bash
clear

cat <<- _EOF_
  1. Вывести текущее системное время
  2. Показать информацию о дисковом пространстве
  3. Показать информацию о загрузке системы
  4. Выйти
_EOF_


read -p "Введите номер выбранной команды[1-4]: " ass

time_s () {
        time
}

df_space () {
         df -h
}

uptime_s () {
         uptime
}

if [[ "$ass" =~ ^[1-4]$ ]]; then
      if (( ass == 1 )); then
            time_s
            exit
      fi
      if (( ass == 2 )); then 
            df_space
            exit
      fi

      if (( ass == 3  )); then
            uptime_s
            exit
      fi

      if (( ass==4 )); then
            echo "Выход из программы"
            exit
      fi
else
     echo "Вы ввели ошибочные данные" >&2
     exit 1
fi
   
